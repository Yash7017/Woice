<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/signback"
    tools:context=".Sign">

    <TextView
        android:id="@+id/hey"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="99dp"
        android:gravity="center_horizontal"
        android:text="Hey!!! What's up??"
        android:textColor="#000000"
        android:textSize="20sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="395dp"
        android:layout_below="@+id/hey"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="6dp"
        android:layout_marginTop="18dp"
        android:layout_marginEnd="-2dp"
        android:orientation="vertical">


        <TextView
            android:id="@+id/nametxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dp"
            android:text="Your Name" />

        <EditText
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="41dp"
            android:layout_below="@id/fnam"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/signbutton"
            android:ems="10"
            android:gravity="center"
            android:hint="Chota Bheem"
            android:inputType="textPersonName" />

        <TextView
            android:id="@+id/agetxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="25dp"
            android:text="Your Age" />

        <EditText
            android:id="@+id/age"
            android:layout_width="wrap_content"
            android:layout_height="41dp"
            android:layout_below="@id/fnam"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/signbutton"
            android:ems="10"
            android:gravity="center"
            android:hint="8"
            android:inputType="number" />

        <TextView
            android:id="@+id/gendertxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="25dp"
            android:text="You are a boy/girl" />


        <Spinner
            android:id="@+id/gender"
            android:layout_width="212dp"
            android:layout_height="41dp"
            android:layout_below="@+id/gendertxt"
            android:layout_alignParentStart="true"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/signbutton"
            android:entries="@array/gender"

            android:textAlignment="center" />

        <Button
            android:id="@+id/register"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="35dp"
            android:background="#ff7366"

            android:text="Lets go"
            android:textColor="#FFFFFF" />

    </LinearLayout>

    <TextView
        android:id="@+id/skip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_gravity="center_horizontal"
        android:layout_marginStart="157dp"
        android:layout_marginBottom="10dp"
        android:onClick="onskip"
        android:text="Skip"
        android:textColor="#000000"
        android:textSize="20sp"
        android:textStyle="bold" />


</RelativeLayout>